<AnchorPane id="AnchorPane" fx:id="ancMain" prefHeight="637.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="attendance.automation.gui.controller.TeacherClassController">
   <stylesheets>
      <URL value="@/attendance/automation/gui/css/Style.css" />
   </stylesheets>
   <children>
      <Pane prefHeight="47.0" prefWidth="600.0">
         <children>
            <ImageView fx:id="btn_close" fitHeight="18.0" fitWidth="15.0" layoutX="571.0" layoutY="16.0" onMouseClicked="#close_app" pickOnBounds="true" preserveRatio="true">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <image>
                  <Image url="@../../../../images/close.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="18.0" fitWidth="15.0" layoutX="541.0" layoutY="18.0" onMouseClicked="#minimize_app" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../../images/minus-symbol.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <effect>
                  <ColorAdjust brightness="0.21" />
               </effect>
            </ImageView>
         </children>
      </Pane>
      <Button layoutX="14.0" layoutY="17.0" mnemonicParsing="false" onAction="#showTeacherMain" prefHeight="45.0" prefWidth="62.0" styleClass="homebutton" text="Home" />
      <Label layoutX="92.0" layoutY="17.0" prefHeight="45.0" text="Class attendance">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <VBox layoutX="10.0" layoutY="72.0" prefHeight="565.0" prefWidth="581.0">
         <children>
            <HBox alignment="CENTER" styleClass="box">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <VBox alignment="CENTER" prefHeight="51.0" prefWidth="158.0">
                     <children>
                        <Label prefHeight="34.0" prefWidth="145.0" text="Class average">
                           <font>
                              <Font size="23.0" />
                           </font>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </VBox>
                  <ProgressBar prefHeight="32.0" prefWidth="300.0" progress="0.72">
                     <HBox.margin>
                        <Insets left="25.0" right="25.0" />
                     </HBox.margin>
                  </ProgressBar>
                  <Label fx:id="attendanceLbl" prefHeight="40.0" text="72%">
